---
import Container from "./Container.astro"
import teamData from './Data/team.json';
import LogoO from "./logoO.astro";
---
<Container>
    <div class="relative flex flex-col items-center md:flex-row">
        <div class="row items-center py-5 md:pr-16 md:w-6/12 md:py-10">
            <div class="text-center md:text-left space-y-3 flex flex-row items-center  md:ml-10">
                <div class="spinner">
                    <LogoO/>
                </div>
                <div>
                <h2 class="text-4xl font-medium leading-none sm:text-6xl bebas-neue-regular ml-2">FAQ</h2></div>
            </div>
        </div>
       
    </div>
    
    <div id="accordion-open" data-accordion="close" class="text-black grid gap-4 my-6">
        {
        teamData.process.map(({  hid, bid, target, title, description} ) => (
        <h2 id={hid}>
        <div class="w-full px-6 py-6 bg-white  rounded-[45px] shadow border border-google_red flex-col justify-start items-start gap-7 inline-flex">
            <button type="button" class="w-full flex justify-between items-center" data-accordion-target={target} aria-expanded="true" aria-controls={bid}>
                <div class="justify-start items-center gap-6 flex">
    <img data-accordion-icon src="/team/plus.svg" alt="" class="justify-items-end w-10 h-10" aria-hidden="true"/>
    <h3 class="text-xl md:text-2xl font-medium bebas-neue-regular">{title}</h3>
</div>

            </button>
            <div class="text-lg font-normal" id={bid} aria-labelledby={hid}>
                <hr class="w-full border border-google_red mb-6"/>
                <p class="mb-2 text-gray-500 text-sm md:text-lg font-sansroboto-condensed font-medium  ">{description}</p>
            </div>
        </div>
        </h2>     
        ))
        }
        
        </div>
        <div class="flex flex-row justify-evenly flex-wrap md:border-2 p-4 rounded-[45px] border-2 border-google_green md:border-google_green">
            <div class="pb-6" >
                <h1 class="bebas-neue-regular text-4xl pb-6">Contact Us</h1>
                <div>
                    <h1 class="font-normal text-xl pb-4">
                        Aditi Kulkarni-8050053739
                    </h1>
                    <h1 class="font-normal text-xl pb-4">Ritik Ranjan-9977341015

                    </h1>
                    <h1 class="font-normal text-xl">
                        Santhsim-8050390858
                    </h1>
                    
                </div>
            </div>
            <div>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3889.5230317430874!2d74.93697637369277!3d12.874053987432418!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3ba3585ea5927d6f%3A0xc65abe4f89ccf8ab!2sSrinivas%20Institute%20Of%20Technology%20(S.I.T)!5e0!3m2!1sen!2sin!4v1714295438943!5m2!1sen!2sin" width="250" height="250" class="border-2 border-google_green rounded-[10%] p-6" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
    </div>

</Container>